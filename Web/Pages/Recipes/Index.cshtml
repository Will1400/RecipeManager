@page "{id:int?}"
@model Web.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Recipes";
}

<h1>All Recipes</h1>
<a asp-page="./Create">New Recipe</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recipes)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">View</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Index" asp-page-handler="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
