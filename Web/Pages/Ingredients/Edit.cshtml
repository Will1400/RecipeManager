@page "{id:int}"
@model Web.Pages.Ingredients.EditModel
@using Entities
@{
    ViewData["Title"] = "Edit Ingredient";
}

<h1>Edit @Model.Ingredient.Name</h1>

<form method="post">
    <input asp-for="Ingredient.Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Ingredient.Name" class="col-form-label"></label>
        <input asp-for="Ingredient.Name" class="form-control"/>
        <span asp-validation-for="Ingredient.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredient.Type" class="col-form-label"></label>
        <select asp-for="Ingredient.Type" asp-items="Html.GetEnumSelectList<IngredientType>()" class="form-control"></select>
        <span asp-validation-for="Ingredient.Type"></span>
    </div>

    <input type="submit" value="Save Changes" class="btn btn-primary" />
</form>