@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<h2>Recipes</h2>
<form>
    <label>Filter</label>
    <select asp-for="FilterType" class="form-control" style="width: 200px; display:inline-block;">
        <option value="all">All</option>
        <option value="nonVegan">Non Vegan</option>
        <option value="vegan">Vegan</option>
    </select>
    <input type="submit" value="Filter" class="btn btn-outline-primary"/>
</form>
<div class="list-group">
    @foreach (var item in Model.Recipes)
    {
        <div class="list-group-item" style="margin-top: 10px">
            <h2>@item.Name</h2>
            <p>@item.Description</p>
            <a asp-page="/Recipes/Details" asp-route-id="@item.Id">View Recipe</a>
        </div>
    }
</div>